@import ihnedWrap
@import Tooltip
@import colors
.tooltip
    h2
        font-size 1.2em
        margin 4px 0px 5px 0px
    h3
        font-size 1.1em
        margin 0px
    p
        margin 0px
oldColor = lighten(HNBlue, 30%)
newColor = darken(HNBlue, 50%)
svg
    .department
        rect.old
            fill oldColor
            &:hover
                fill darken(oldColor, 20%)
        rect.new
            fill newColor
            &:hover
                fill lighten(newColor, 20%)
    .yAxis
        .domain
            display none
#main
    > h1
    > p
        margin-left 13px
#fallback
    display none
    &.incapable
        display block
    img
        margin-left 7px
        margin-top 7px
    p
        margin-left 13px

#content
    &.incapable
        display none
    margin-top 30px
    position relative
    padding-top 50px
    .selector
        position absolute
        top 0px
        left -9px
        &#displaySelector
            left auto
            right 104px
        list-style none
        li
            cursor pointer
            float left
            border 1px solid #eee
            padding 7px 12px
            background white
            color black
            &.active
                background HNBlue
